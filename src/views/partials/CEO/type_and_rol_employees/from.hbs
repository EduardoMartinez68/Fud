<br>
{{#each company}}
    <form action="/fud/{{id}}/add-department-employees" method="POST" enctype="multipart/form-data">
        <center><h5><i class="fi-icon fi-ss-apartment"></i>Add a new department employees</h5></center>
        <hr>
        <div class="form-group">
            <input type="text" placeholder="Name" name="name" class="from-control" required maxlength="60" style="width: 100%;">
        </div>
        <div class="form-group">
            <input type="text" placeholder="Description" name="description" class="from-control" style="width: 100%;">
        </div>
        <hr>
        <button type="submit" class="btn btn-success btn-block" id="">Save</button>
    </form>
{{/each}}


<script src="/js/store/other.js"></script>