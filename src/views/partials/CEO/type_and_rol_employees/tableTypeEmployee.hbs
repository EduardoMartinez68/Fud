
<table class="table table-hover"> <!--table-bordered-->
    <colgroup>
        <col style="width: 25%;">
        <col style="width: 20%;">
        <col style="width: 15%;">
        <col style="width: 20%;">
        <col style="width: 20%;">
    </colgroup>
    <thead>
    <tr>
        <th>Name</th>
        <th>Salary</th>
        <th>% Commissions</th>
        <th>% Discount for product</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    {{#each typeEmployees}}
        <tr>
            <td>{{name}}</td>
            <td>{{salary}}$ {{currency}}/{{type_of_salary}}</td>
            <td>{{commissions}}%</td>
            <td>{{discount_for_product}}%</td>
            <td>
                <button class="btn btn-danger" id="{{id}}" onclick="delete_role_employee(this.id,{{id_companies}})"><i class="fi-department fi-sr-trash"></i></button>
                <button class="btn btn-danger" id="{{id}}" onclick="edit_role_employee(this.id,'{{id_companies}}','{{name}}','{{description}}')"><i class="fi-department fi-sr-pencil"></i></button>            
            </td>
        </tr>
    {{/each}}
    </tbody>
</table>





<script>
    async function delete_role_employee(id,id_company){
        if(await questionMessage('Delate role employee','Do you want to delete this role employee?')){
            window.location.href = "/fud/"+id_company+"/"+id+"/delete-role-user";
        }
    }

    async function edit_role_employee(id,id_company){
        window.location.href = "/fud/"+id_company+"/"+id+"/edit-role-user";
    }
</script>