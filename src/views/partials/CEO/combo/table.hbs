<div class="form-group">
    <h6>Supplies and products</h6><br>
    {{>CEO/combo/browser}}
    <table class="table table-hover" id="table-supplies-products" name="table-combo"> <!--table-bordered-->
        <colgroup>
            <col style="width: 30%;">
            <col style="width: 30%;">
            <col style="width: 15%;">
            <col style="width: 15%;">
            <col style="width: 10%;">
        </colgroup>
        <thead>
        <tr>
            <th><label>Barcode</label></th>
            <th><label>Name</label></th>
            <th><label>Cant.</label></th>
            <th><label>Sell for</label></th>
            <th><label></label></th>
        </tr>
        </thead>
        <tbody>
            {{#each suppliesCombo}}
                <th><label>{{product_barcode}}</label></th>
                <th><label>{{product_name}}</label></th>
                <th><button class="btn" onclick="edit_cant(this)">{{amount}}</button></th>
                <th><select class="form-control"><option value="pza">Pza</option><option value="kg">kg</option><option value="g">g</option><option value="l">L</option><option value="ml">ml</option></select></th>
                <th><button class="btn btn-danger" onclick="delate_row(this)"><i class="fi-icon fi-sr-trash"></i></button></th>
            {{/each}}
        </tbody>
    </table>
    <input type="text" name="barcodeProducts" id="barcodeProducts">
</div>