<link rel='stylesheet' href='https://cdn-uicons.flaticon.com/uicons-solid-rounded/css/uicons-solid-rounded.css'>

<!--this is the navbar-->
<section class="descriptionWindow">
    <head class="headDescription">
        <div class="navbar">
            <ul class="ul-menu-bar">
                {{#if user}}
                    <input type="checkbox" id="check">
                    <label for="check" class="btn-menu-bar">
                        <i class="fi-des fi-br-menu-burger" id="btn-navbar-open"></i>
                        <i class="fi-des fi-br-cross" id="btn-navbar-cancel"></i>
                    </label>
                    <div class="sidebar">
                        {{#if company}}
                            {{#each company}}
                                <header>{{name}}</header>
                            {{/each}}
                        {{else}}
                            <header>Füd</header>
                        {{/if}}
                        <ul>
                            {{#each company}}
                                <li><a href="company-home"><i class="fi-icon fi-sr-apps"> Dashboard</i></a></li>
                                <li><a href="branches"><i class="fi-icon fi-sr-store-alt"> Branch</i></a></li>
                                <li><a href="report-sales"><i class="fi-icon fi-ss-label"> Sales</i></a></li>
                                <li><a href="{{id}}"><i class="fi-icon fi-sr-user"> Customers</i></a></li>
                                <li><a href="dish"><i class="fi-icon fi-sr-restaurant"> Dishes</i></a></li>
                                <li><a href="{{id}}"><i class="fi-icon fi-sr-hat-chef"> Employees</i></a></li>
                                <li><a href="report"><i class="fi-icon fi-ss-files-medical"> Reports</i></a></li>
                                <li><a href="{{id}}"><i class="fi-icon fi-sr-settings"> Options</i></a></li>
                            {{/each}}
                            <li><a href="/fud/logout"><i class="fi-icon fi-sr-settings"> Logout</i></a></li>
                        </ul>
                    </div>
                {{/if}}
            </ul>
            <ul class="titleDesciption">
                <span><a href="/fud/home" class="des" id="des" style="text-decoration: none;">Company</i></a></span>
                <i class="fi-des fi-sr-hat-chef"></i>
            </ul>
        </div>
    </head>
</section>


<!--this script will be that the description of the web choose depending in where is the user-->
<script>
    var url = window.location.href;
    var works = url.split("/");
    var description = works.pop();
    document.getElementById("des").textContent = text_convert(description);

    function text_convert(title) {
        var textConvert = title.replace(/-/g, ' ');
        if (textConvert==''){
            return 'Füd'
        }
        return textConvert;
    }
</script>