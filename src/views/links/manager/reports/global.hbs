<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="/js/report/company_report.js"></script>
<script>
    // Datos recibidos del servidor
    const arrayYears=[{{years}}]
    const arrayMonths=[{{months}}]
    const arrayDays=[{{days}}]
    const arrayServerLabel=[]

    for (var i = 0; i < arrayYears.length; i++) {
        const date = arrayDays[i] + '/' + arrayMonths[i] + '/' + arrayYears[i];
        arrayServerLabel.push(date);
    }
        
    const chartData = {{chartData}};
    var ctx = document.getElementById('companyExpenses');
    draw_graph(ctx,'line','My Portfolio',arrayServerLabel,chartData,'Ganancias')

</script>
<script>
    const text=JSON.stringify('{{ distributeLabels}}');
    const arrayDistributeLabels = text.split(',');
    var ctx2 = document.getElementById('myPortfolio');
    draw_graph(ctx2,'doughnut','My Portfolio',arrayDistributeLabels,{{distributeData}},'Ventas')
</script>

<script>
    var ctx3 = document.getElementById('companyExpenses1');
    const text2=JSON.stringify('{{ salesBranchesLabels}}');
    const salesBranchesLabels=text2.split(',');
    
    draw_graph(ctx3,'bar','My Portfolio',salesBranchesLabels,[{{salesBranchesData}}],'Ganancias')
</script>

<script>
    var ctx4 = document.getElementById('companyExpenses3');
    const text3=JSON.stringify('{{ salesByCombosLabels}}');
    const salesByCombosLabels=text3.split(',');
    
    draw_graph(ctx4,'doughnut','My Portfolio',salesByCombosLabels,{{salesByCombosData}},'Ganancias por combos')
</script>

<script>
    // get the div for his id
    const salesDiv1 = document.getElementById('salesDiv1');
    const salesDiv2 = document.getElementById('salesDiv2');
    const salesDiv3 = document.getElementById('salesDiv3');
    const salesDiv4 = document.getElementById('salesDiv4');

    //get the container of the graphs 
    const graphicsAll = document.getElementById('graphics-all');
    const graphicsDay = document.getElementById('graphics-day');
    const graphicsMonth = document.getElementById('graphics-month');
    const graphicsYear = document.getElementById('graphics-year');

    function remove_active_class_from_all() {
        graphicsAll.classList.remove('div-disabled');
        graphicsAll.classList.add('div-disabled');

        graphicsDay.classList.remove('div-disabled');
        graphicsDay.classList.add('div-disabled');

        graphicsMonth.classList.remove('div-disabled');
        graphicsMonth.classList.add('div-disabled');

        graphicsYear.classList.remove('div-disabled');
        graphicsYear.classList.add('div-disabled');
    }


    // add a event listener for the click
    salesDiv1.addEventListener('click', function() {
        remove_active_class_from_all();
        graphicsDay.classList.remove('div-disabled');
    });

    salesDiv2.addEventListener('click', function() {
        remove_active_class_from_all();
        graphicsMonth.classList.remove('div-disabled');
    });

    salesDiv3.addEventListener('click', function() {
        remove_active_class_from_all();
        graphicsYear.classList.remove('div-disabled');
    });

    salesDiv4.addEventListener('click', function() {
        remove_active_class_from_all();
        graphicsAll.classList.remove('div-disabled');
    });
</script>