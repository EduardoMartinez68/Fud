<!DOCTYPE html>
<html lang="en">

<head>
    <link rel="stylesheet" href="/css/report/report.css">
    </link>
</head>

<body>
    {{>reportBar}}

    
    <table class="table-report" border="1px">
        <tr>
            <th colspan="3">My Portfolio</th>
        </tr>
        <tr>
            <td>My company</td>
            <td>Sales per day</td>
            <td>Earnings by company</td>
        </tr>
        <tr>
            <td class="td-report">
                <div>
                    <canvas id="myPortfolio"></canvas>
                </div>
            </td>
            <td class="td-report">
                <div>
                    <canvas id="companyExpenses"></canvas>
                </div>
            </td>
            <td class="td-report">
                <div>
                    <canvas id="companyExpenses1"></canvas>
                </div>
            </td>
        </tr>
    </table>
    
    <!--DASHBOARD-->
    <table class="table-report" border="1px">
        <tr>
            <th colspan="3">Name Company</th>
        </tr>
        <tr>
            <td>Sales per day</td>
            <td>Payment Methods</td>
            <td>Entrances and exits</td>
        </tr>
        <tr>
            <td class="td-report">
                <div>
                    <canvas id="myPortfolio"></canvas>
                </div>
            </td>
            <td class="td-report">
                <div>
                    <canvas id="companyExpenses"></canvas>
                </div>
            </td>
            <td class="td-report">
                <div>
                    <canvas id="companyExpenses1"></canvas>
                </div>
            </td>
        </tr>
    </table>
    <section>
        <div class="container">
            <div class="">
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-3 d-flex card-dashboard">
                            <div class="mx-auto">
                                <h6 class="text-success">
                                    <i class="fi-success fi-sr-tags"></i>
                                    Sales
                                </h6>
                                <h3 class="font-weight-bold">5 ($2,100)</h3>
                            </div>
                        </div>
                        <div class="col-lg-3 d-flex card-dashboard">
                            <div class="mx-auto">
                                <h6 class="text-danger">
                                    <i class="fi-success fi-sr-tags"></i>
                                    Sales canceled
                                </h6>
                                <h3 class="font-weight-bold text-danger">5 ($2,100)</h3>
                            </div>
                        </div>
                        <div class="col-lg-2 d-flex card-dashboard">
                            <div class="mx-auto">
                                <h6 class="text-success">
                                    <i class="fi-success fi-sr-ticket-alt"></i>
                                    Utility
                                </h6>
                                <h3 class="font-weight-bold">$50,000</h3>
                            </div>
                        </div>
                        <div class="col-lg-2 d-flex card-dashboard">
                            <div class="mx-auto">
                                <h6 class="text-success">
                                    <i class="fi-success fi-sr-ticket-alt"></i>
                                    Average ticket
                                </h6>
                                <h3 class="font-weight-bold">$50,000</h3>
                            </div>
                        </div>
                        <div class="col-lg-2 d-flex card-dashboard">
                            <div class="mx-auto">
                                <h6 class="text-success">
                                    <i class="fi-success fi-br-percentage"></i>
                                    Discount
                                </h6>
                                <h3 class="font-weight-bold">$50,000</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    </div>
</body>

</html>


<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="/js/report/company_report.js"></script>